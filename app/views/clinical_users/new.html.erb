<!-- maybe add separate login as an organization- for dropdown menu -->

<% content_for :stylesheets do %>
  #user_menu {display: none}
<% end %>

<% provide(:title, 'Sign up') %>
<h1>Healthcare Provider Registration</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@clinicaluser) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
		<br>
       <%= f.label :ein, "EIN" %>
      <%= f.text_field :ein, class: 'form-control' %>
		<br>
       <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>
		<br>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
		<br>
      <%= f.label :role, "Role" %>
      <%= f.text_field :role, class: 'form-control' %>
		<br>
      <%= f.label :telephone, "Telephone" %>
      <%= f.text_field :telephone, class: 'form-control' %>
		<br>
		
		<!-- Dropdown list of orgs already registered- need to link to db and add default names to db -->
		
		<label class="filter-col" style="margin-right:0;" for="pref-perpage">Organization</label>
            <%= form_tag :controller => 'products', :action => 'index', :method => 'filter' do %>
	            <select name="organizationID" id="organizationID" class="form-control" onchange="this.form.submit()">
					<option value="" disabled selected>Select Your Organization</option>
	                <option value="1">Organization 1</option>
	                <option value="2">Organization 2</option>
	                <option value="3">Organization 3</option>
	                <option value="4">Organization 4</option>
	                <option value="5">Organization 5</option>
	                <option value="6">Organization 6</option>
	            </select>     
	        <% end %>                           
		<br>
		
		<%= f.label :organizationID, "Organization ID" %>
      <%= f.text_field :organizationID, class: 'form-control' %>
		<br>
		
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
		<br>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
		<br>
      <%= f.submit "Create Account", class: "btn btn-primary" %>
    <% end %>
	<br><br><br>
  </div>
</div>