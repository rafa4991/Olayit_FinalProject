<% provide(:title, "Log in") %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>Vendor Login</h2><br>
		<%= form_for(:session, url: loginVendor_path) do |f| %>

			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control' %>
				<br>
			<%= f.label :password %>
			<%= f.password_field :password, class: 'form-control' %>
				<br>
			<%= f.submit "Login as Vendor", class: "btn btn-primary" %>
		<% end %>
	<br>
	<p>New user? <%= link_to "Sign up now!", signupVendor_path %></p>
	</div>
</div>