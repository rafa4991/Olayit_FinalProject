<% provide(:title, 'Sign up') %>
<h1>Vendor Registration</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@vendor) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
		<br>
      <div class="list-group-item">
        <div class="form-group">
                <label class="filter-col" style="margin-right:0;" for="pref-perpage">Vendor:</label>

                <%= form_tag :controller => 'product_list', :action => 'index', :method => 'filter' do %>   
                   <%= select("vendor", "id", VendorOrganization.all.collect {|vo| [ vo.name, vo.id ] }, {prompt: 'Select Vendor'}, class: "form-control", onchange: "")%>   
              <% end %>                     
            </div>
        </div>
                

       <%= f.label :ein, "EIN" %>
      <%= f.text_field :ein, class: 'form-control' %>
		<br>
       <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>
		<br>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
		<br>
      <%= f.label :role, "Role" %>
      <%= f.text_field :role, class: 'form-control' %>
		<br>
      <%= f.label :telephone, "Telephone" %>
      <%= f.text_field :telephone, class: 'form-control' %>
		<br>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
		<br>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
		<br>
      <%= f.submit "Create Account", class: "btn btn-primary" %>
    <% end %>
		<br><br><br>	
  </div>
</div>