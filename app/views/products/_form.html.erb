             <%= f.submit "Create a Product", class: "btn btn-primary" %>

            </div>

            
           
      
       </div>
      </div>
    </div>

    <div class="form">
      <div class="form-group">
        <div class="col-xs-6">
           <div class="col-xs-6">
           <h4><strong> Product Information </strong></h4>
          <%= f.label :Description %><br>
          <%= f.text_area :description, placeholder: "Enter a Description", class: 'form-control' %><br>

          <%= f.label :Features %><br>
          <%= f.text_area :features, placeholder: "Enter Product Features", class: 'form-control' %><br>

          <%= f.label :Height %><br>
          <%= f.text_field :height, placeholder: "Enter Height", class: 'form-control' %><br>

          <%= f.label :Width %><br>
          <%= f.text_field :width, placeholder: "Enter Width", class: 'form-control' %><br>

          <%= f.label :Depth %><br>
          <%= f.text_field :depth, placeholder: "Enter Depth", class: 'form-control' %>
         
