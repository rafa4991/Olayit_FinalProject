            <%= f.number_field :price, :step => 'any', placeholder: "Enter a Price", class: 'form-control' %><br>

            <h4> <strong> Research Links </strong> </h4>
            <%= f.label :name, "Clinical Research"%><br>
            <%= f.text_field :research, placeholder: "Enter a Research Link", class: 'form-control' %>    <br>   
