<h1>Compare Products!</h1>
<% if @compare.empty? %>
  <p>No products to compare</p>
<% else %>

<%= link_to "Empty Compare Cart", compare_clear_path, data: { confirm: 'Are you sure?' }%>
<% end %>
<br><br><br>


<!-- Accessing the compare session hash ["1",1], where "1" is the product id.
-->

<table id = "table_compare">
<% @compare.each do |id| %>
  <% product = Product.find_by_id(id) %>
	<tr><td>
		<img src="<%= product.image %>" alt="http://placehold.it/320x150" style="width:auto;height:200px;">
		</td>
		<td><%= link_to product.name, product %></td>
		<td><%= product.price %></td>
		<td><%= product.description %></td>
		
	</tr>

<% end %>
</table>