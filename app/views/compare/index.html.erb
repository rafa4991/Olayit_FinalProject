<h1>Compare Products!</h1>
<% if @compare.empty? %>
  <p>No products to compare</p>
<% else %>
<%= link_to "Empty Compare cart", compare_clear_path %>
<% end %>
<br><br><br>

<!-- Accessing the compare session hash ["1",1], where "1" is the product id.
-->

<% @compare.each do |id, qty| %>
  <% product = Product.find_by_id(id) %>
  
  <ul>
  <li>
    <%= link_to product.name, product %>
    <p><%= product.description %></p>
  </li>
  </ul>

<% end %>
